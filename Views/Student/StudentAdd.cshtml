@{
    ViewData["Title"] = "Student - Register";
}

@model expertsession.Models.StudentRegister;

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Student Register</h3>
</div>
<form method="post" class="row g-3">
    <div class="col-md-6">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter your name" asp-for="student_name">
    </div>
    <div class="col-md-6">
        <label for="branch" class="form-label">Branch</label>
        <input type="text" class="form-control" id="branch" placeholder="Enter your branch" asp-for="student_branch">
    </div>
    <div class="col-md-4">
        <label for="rollno" class="form-label">Roll No.</label>
        <input type="text" class="form-control" id="rollno" placeholder="Enter your roll no." asp-for="student_roll">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>


